<div class = "pt-title">
<h1><%=@task.task_name.upcase%></h1>
</div>
<div class = "pt-details">
<h3>Details </h3>
</div>
<table>
  <tbody>
  	<tr>
  		<th>Task :</th>
  		<td><%=@task.task_name.capitalize%></td>
  	</tr>
  	<tr>
  		<th>Project :</th>
  		<td><span><%=@task.project.try(:name)%></span></td>
  	</tr>
  	<tr>
  		<th>User :</th>
  		<td><%=@task.user.try(:name)%></td>
  	</tr>
  	<tr>
  		<th>Hours :</th>
  		<td><%=@task.total_hours%></td>
  	</tr>
  	<tr>
  		<th>Start Date</th>
  		<td><%=@task.start_date.try(:strftime,"%Y-%b-%d")%></td>
  	</tr>
  	<tr>
  		<th>End Date</th>
  		<td><%=@task.end_date.try(:strftime,"%Y-%b-%d")%></td>
  	</tr>
  	<tr>
  		<th>Created At</th>
  		<td><%=@task.created_at.try(:strftime,"%Y-%b-%d")%></td>
  	</tr>
  </tbody>
</table>
<div><%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%></div>
<div><%= link_to 'Update', edit_task_path(@task) %></div>